<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tesseract4Android" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/lime_harmonized_text</item>
        <item name="colorPrimaryVariant">@color/lime_harmonized_container</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/on_lime_harmonized_container</item>
        <!--        <item name="colorSecondaryVariant">@color/on_lime_harmonized_container</item>-->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lime_harmonized_text</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Tesseract4Android.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tesseract4Android.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Tesseract4Android.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>