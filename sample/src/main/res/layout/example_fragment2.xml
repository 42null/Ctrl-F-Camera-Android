<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/example_fragment2">


    <org.opencv.android.JavaCameraView
        android:id="@+id/main_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/textSearchingProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:backgroundTint="#AA1C1C"
        android:indeterminate="true"
        android:progress="25"
        android:progressBackgroundTint="?attr/colorPrimaryVariant"
        android:progressTint="?attr/colorPrimary"
        android:visibility="invisible" />


    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="640dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/rounded_dp_level2"
        android:backgroundTint="@color/lime_harmonized_text"
        android:text="(Scan for text)"
        android:textAlignment="center"
        android:textAllCaps="false" />

</FrameLayout>
